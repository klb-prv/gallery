---
const { id } = Astro.props;
---

<dialog id={id} class="modal">
  <slot name="close"></slot>
  <slot name="main"></slot>
</dialog>

<style>
  dialog {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    display: none;
  }

  dialog[open] {
    display: block;
  }

  dialog::backdrop {
    background: rgba(0, 0, 0, 0.6);
  }
</style>
